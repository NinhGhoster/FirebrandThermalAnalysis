#!/bin/sh
app=`basename "$0"`
appdir=`dirname "$0"`
if [ `uname` = "Darwin" ]
then
	export DYLD_LIBRARY_PATH=$appdir/../lib:$appdir/../Frameworks:$appdir:$DYLD_LIBRARY_PATH
	exec mono --arch=64 "$appdir/$app.exe" "$@"
else
	export LD_LIBRARY_PATH=$appdir/../lib:$appdir:$LD_LIBRARY_PATH
	exec mono $appdir/$app.exe "$@"
fi
